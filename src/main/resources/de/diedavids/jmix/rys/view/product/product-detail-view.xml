<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://productDetailView.title"
      focusComponent="form">
    <data>
        <instance id="productDc"
                  class="de.diedavids.jmix.rys.product.Product">
            <fetchPlan extends="_base">
                <property name="prices" fetchPlan="_base"/>
                <property name="category" fetchPlan="_base"/>
                <property name="stockItems" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="pricesDc" property="prices"/>
            <collection id="stockItemsDc" property="stockItems"/>
        </instance>
        <collection id="productCategoriesDc"
                    class="de.diedavids.jmix.rys.product.ProductCategory">
            <fetchPlan extends="_base"/>
            <loader id="productCategoriesDl" readOnly="true">
                <query>
                    <![CDATA[select e from rys_ProductCategory e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <tabSheet id="contentTabSheet" width="100%" height="100%">
            <tab id="formTab"
                 label="msg://de.diedavids.jmix.rys.product/generalInformation"
            >
                <formLayout id="form" dataContainer="productDc">
                    <textField id="nameField" property="name"/>
                    <entityComboBox id="categoryField" property="category" itemsContainer="productCategoriesDc"/>
                </formLayout>
            </tab>
            <tab id="descriptionTab"
                 label="msg://de.diedavids.jmix.rys.product/Product.description"
            >
                <textArea id="descriptionField" height="100%" width="100%" property="description" dataContainer="productDc"/>
            </tab>
            <tab id="pricesTab"
                 label="msg://de.diedavids.jmix.rys.product/Product.prices"
            >
                <vbox width="100%">
                    <h4 text="msg://de.diedavids.jmix.rys.product/Product.prices"/>
                    <hbox id="pricesButtonsPanel" classNames="buttons-panel">
                        <button id="createPriceBtn" action="pricesDataGrid.pricesCreate"/>
                        <button id="editPriceBtn" action="pricesDataGrid.pricesEdit"/>
                        <button id="removePriceBtn"  action="pricesDataGrid.pricesRemove"/>
                    </hbox>
                    <dataGrid id="pricesDataGrid" dataContainer="pricesDc" width="100%" minHeight="20em">
                        <actions>
                            <action id="pricesCreate" type="list_create">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="pricesEdit" type="list_edit">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="pricesRemove" type="list_remove"/>
                        </actions>
                        <columns>
                            <column property="price"/>
                            <column property="unit"/>
                        </columns>
                    </dataGrid>
                </vbox>
            </tab>
            <tab id="stockItemsTab"
                 label="msg://de.diedavids.jmix.rys.product/Product.stockItems"
            >
                <vbox width="100%">
                    <h4 text="msg://de.diedavids.jmix.rys.product/Product.stockItems"/>
                    <hbox id="stockItemsButtonsPanel" classNames="buttons-panel">
                        <button action="stockItemsDataGrid.stockItemsCreate"/>
                        <button action="stockItemsDataGrid.stockItemsEdit"/>
                        <button action="stockItemsDataGrid.stockItemsRemove"/>
                    </hbox>
                    <dataGrid id="stockItemsDataGrid" dataContainer="stockItemsDc" width="100%" minHeight="20em">
                        <actions>
                            <action id="stockItemsCreate" type="list_create">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="stockItemsEdit" type="list_edit">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="stockItemsRemove" type="list_remove"/>
                        </actions>
                        <columns>
                            <column property="identifier"/>
                        </columns>
                    </dataGrid>
                </vbox>
            </tab>
        </tabSheet>

        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
