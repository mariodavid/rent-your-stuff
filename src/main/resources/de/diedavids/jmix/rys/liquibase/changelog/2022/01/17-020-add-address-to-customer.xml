<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="rys">
        <addColumn tableName="RYS_CUSTOMER">
            <column name="ADDRESS_CITY" type="VARCHAR(255)"/>
            <column name="ADDRESS_POST_CODE" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="rys">
        <addColumn tableName="RYS_CUSTOMER">
            <column name="ADDRESS_STREET" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="ADDRESS_STREET" defaultNullValue="''" tableName="RYS_CUSTOMER"/>
    </changeSet>
</databaseChangeLog>