<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
<changeSet id="1" author="rys">
<createTable tableName="RYS_PRODUCT_PRICE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RYS_PRODUCT_PRICE"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="PRODUCT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="AMOUNT" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="UNIT" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
</changeSet>
<changeSet id="2" author="rys">
<addForeignKeyConstraint baseColumnNames="PRODUCT_ID" baseTableName="RYS_PRODUCT_PRICE" constraintName="FK_RYS_PRODUCT_PRICE_ON_PRODUCT" referencedColumnNames="ID" referencedTableName="RYS_PRODUCT"/>
</changeSet>
</databaseChangeLog>